{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.source",
      "!**/.archieved",
      "!**/tsconfig.json",
      "!**/tsconfig.*.json",
      "!**/-poc"
    ]
  },
  "extends": ["ultracite"],
  "overrides": [
    {
      "includes": ["**/routes/**/*"],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off"
          }
        }
      }
    },
    {
      "includes": ["**/env/**/*.ts"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off",
            "noMagicNumbers": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.css"],
      "linter": {
        "rules": {
          "suspicious": {
            "noUnknownAtRules": "off"
          }
        }
      }
    },
    {
      "includes": ["**/demo/**/*", "**/routes/demo/**/*"],
      "linter": {
        "rules": {
          "suspicious": {
            "noAlert": "off"
          }
        }
      }
    },
    {
      "includes": ["**/schema/**/*", "**/lib/db/schema/**/*"],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off"
          }
        }
      }
    },
    {
      "includes": ["**/validation.ts", "**/*validation*.ts", "**/*schemas*.ts"],
      "linter": {
        "rules": {
          "style": {
            "noMagicNumbers": "off"
          }
        }
      }
    },
    {
      "includes": ["**/lib/db/seed/**/*", "**/seed/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          },
          "style": {
            "noMagicNumbers": "off"
          }
        }
      }
    },
    {
      "includes": ["**/auth/**/*", "**/lib/auth/**/*"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off",
            "noMagicNumbers": "off"
          }
        }
      }
    },
    {
      "includes": ["**/api/**/*"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          }
        }
      }
    },
    {
      "includes": ["**/lingui/**/*", "**/i18n/**/*"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          }
        }
      }
    },
    {
      "includes": ["**/lib/db/**/*"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          }
        }
      }
    },
    {
      "includes": ["**/admin/**/*"],
      "linter": {
        "rules": {
          "a11y": {
            "useButtonType": "off",
            "noLabelWithoutControl": "off",
            "noSvgWithoutTitle": "off",
            "useValidAnchor": "off"
          },
          "complexity": {
            "noExcessiveCognitiveComplexity": "off"
          },
          "style": {
            "noNestedTernary": "off"
          }
        }
      }
    },
    {
      "includes": ["**/demo/**/*"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          },
          "suspicious": {
            "noAlert": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/-domain/errors.ts",
        "**/-domain/contracts.ts",
        "**/-domain/schemas.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          }
        }
      }
    },
    {
      "includes": ["apps/web/src/components/ui/**/*"],
      "linter": {
        "rules": {
          "performance": {
            "noNamespaceImport": "off"
          }
        }
      }
    }
  ]
}
