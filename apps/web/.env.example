# Luar Sekolah LMS - Environment Variables
# Copy this file to .env and update the values

# ===================================================================
# Database Configuration
# ===================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://luar_sekolah:luar123456@localhost:5432/luar_sekolah_lms"

# ===================================================================
# Authentication Configuration
# ===================================================================
# Secret key for signing JWT tokens (generate a secure random string)
BETTER_AUTH_SECRET="luar-sekolah-lms-auth-secret-change-in-production"

# Base URL of your application
BETTER_AUTH_URL="http://localhost:3000"

# ===================================================================
# OAuth Providers (Optional)
# ===================================================================
# GitHub OAuth - Create app at https://github.com/settings/applications/new
# GITHUB_CLIENT_ID=""
# GITHUB_CLIENT_SECRET=""

# Google OAuth - Create app at https://console.cloud.google.com/apis/credentials
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# ===================================================================
# Application Configuration
# ===================================================================
# Environment (development, production)
NODE_ENV="development"

# Server port (default: 3000)
PORT=3000

# ===================================================================
# Luar Sekolah LMS Configuration
# ===================================================================
# Application name and branding
APP_NAME="Luar Sekolah LMS"
APP_DESCRIPTION="Learning Management System for Indonesian Schools"

# Application URL (for production deployments)
APP_URL="http://localhost:3000"

# ===================================================================
# Development Configuration
# ===================================================================
# Enable debug logs
DEBUG="false"

# Database connection pool size (development)
DB_POOL_SIZE="5"

# ===================================================================
# Production Configuration (Uncomment for production)
# ===================================================================
# CORS origins (comma-separated)
# CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Rate limiting
# RATE_LIMIT_WINDOW_MS="900000"
# RATE_LIMIT_MAX_REQUESTS="100"

# Session configuration
# SESSION_MAX_AGE="86400000" # 24 hours in milliseconds

# Email configuration (for password reset, notifications)
# SMTP_HOST=""
# SMTP_PORT="587"
# SMTP_USER=""
# SMTP_PASS=""
# EMAIL_FROM="noreply@luarsekolah.com"

# ===================================================================
# Optional: Cloudflare Configuration (if deploying to Cloudflare)
# ===================================================================
# CLOUDFLARE_ACCOUNT_ID=""
# CLOUDFLARE_API_TOKEN=""
# CLOUDFLARE_DATABASE_ID=""

# ===================================================================
# Notes
# ===================================================================
# 1. Generate a secure BETTER_AUTH_SECRET using:
#    openssl rand -base64 32
#    or visit: https://generate-secret.vercel.app/32
#
# 2. For production, always use environment variables instead of .env files
#
# 3. Database setup with Docker:
#    bun run db:start
#
# 4. Run migrations after setup:
#    bun run db:push
#
# 5. This project is forked from betterz-stack template:
#    https://github.com/masrurimz/betterz-stack
